@model TestSoftwareStrategico.Models.Productos

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Productos</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ProductoId" />
            <div class="form-group">
                <label asp-for="TipoProdcutoId" class="control-label"></label>
                <input asp-for="TipoProdcutoId" class="form-control" />
                <span asp-validation-for="TipoProdcutoId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductoNombre" class="control-label"></label>
                <input asp-for="ProductoNombre" class="form-control" />
                <span asp-validation-for="ProductoNombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductoDescripcion" class="control-label"></label>
                <input asp-for="ProductoDescripcion" class="form-control" />
                <span asp-validation-for="ProductoDescripcion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Precio" class="control-label"></label>
                <input asp-for="Precio" class="form-control" />
                <span asp-validation-for="Precio" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Activo" /> @Html.DisplayNameFor(model => model.Activo)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="InsertTimeStamp" class="control-label"></label>
                <input asp-for="InsertTimeStamp" class="form-control" />
                <span asp-validation-for="InsertTimeStamp" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
