@model IEnumerable<TestSoftwareStrategico.Models.TiposProductos>

@{
    ViewData["Title"] = "Index";
}

<div class="text-center">
    <h1 class="display-4">Administrar Tipos Productos</h1>
</div>
<br />
<p>
    <a class="btn btn-danger" href=@Url.Action("Index", "Admin")>Regresar</a>
    <a asp-action="Create" class="btn btn-info">Crear Nuevo Producto</a>
</p>
<br />
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TipoProductoNombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Activo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.InsertTimeStamp)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.TipoProductoNombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Activo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.InsertTimeStamp)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.TipoProdcutoId">Editar</a> |
                    <a asp-action="Details" asp-route-id="@item.TipoProdcutoId">Ver Detalles</a> |
                    <a asp-action="Delete" asp-route-id="@item.TipoProdcutoId">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
